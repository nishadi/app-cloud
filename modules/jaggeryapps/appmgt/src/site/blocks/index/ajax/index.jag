include("/jagg/jagg.jag");
include("/jagg/constants.jag");

(function () {
    var mod, obj,
            action = request.getParameter("action"),
            site = require("/site/conf/site.json");

    var log = new Log();

    if (!jagg.getUser()) {
        print(UNAUTHORIZED_ERROR_RESPONSE);
        return;
    }
    if (action == "getTaggedApplicationList") {

        var applicationModule = jagg.module("application");
        try {
            var taggedApplications = applicationModule.getTaggedApplicationsList();
            print(taggedApplications);
        } catch (e) {
            var msg = "Error while getting tagged application list";
            log.error(e);
        }
    } else {
        log.error("No action specified");
    }
}());
